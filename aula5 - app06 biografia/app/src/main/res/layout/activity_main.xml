<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Sobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnSobre"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="132dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Formação"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnForm"
            app:layout_constraintTop_toBottomOf="@+id/btnSobre"
            android:layout_marginTop="60dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Experiência"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnExp"
            app:layout_constraintTop_toBottomOf="@+id/btnForm"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp"/>
    <Button
            android:text="Objetivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnObjetivo"
            app:layout_constraintTop_toBottomOf="@+id/btnExp"
            android:layout_marginTop="64dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Informações"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewDesc"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.060000002" android:textSize="36sp" android:textStyle="bold"
            android:textColor="@color/design_default_color_on_secondary"/>

</androidx.constraintlayout.widget.ConstraintLayout>